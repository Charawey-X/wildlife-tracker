{{>layout.hbs}}

<div class="views animals">
    {{#if animals}}
        {{#each animals as |a|}}
            <div class="card text-white mb-3" style="width: 18rem; border-radius:20px;background-color:rgba(0,0,0,0.5);">
                <div class="card-body">
                    <h5 class="card-title">{{a.name}}</h5>
                    <p class="card-text">{{a.type}}</p>
                    <p class="card-text">{{a.health}}</p>
                    <p class="card-text">{{a.age}}</p>

                </div>
            </div>
        {{/each}}
    {{else}}
        <h2>No animals! Add some animals <a href="/create/animal">here</a></h2>
    {{/if}}

</div>