{{>layout.hbs}}

<div class="form">
    <form action="/create/ranger/new" method="post">
        <h1>Add Ranger</h1>
        <hr>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Input Name..." required>
        </div>
        <div class="form-group">
            <label for="badge_number">Badge Number</label>
            <input type="text" class="form-control form-control-lg" id="badge_number" name="badge_number" placeholder="Input Badge Number..." required>
        </div>
        <div class="form-group">
            <label for="phone_number">Phone Number</label>
            <input type="text" class="form-control form-control-lg" id="phone_number" name="phone_number" placeholder="Input Phone Number..."
                   required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg"> ADD </button>
        </div>
    </form>
</div>